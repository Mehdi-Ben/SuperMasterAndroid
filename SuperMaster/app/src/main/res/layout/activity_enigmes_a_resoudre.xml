<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@mipmap/papier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/bouton_pause"
            android:elevation="0dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical|center_horizontal"
            android:onClick="onClickPause"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:cropToPadding="false"
            android:layout_marginRight="20pt"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nom_mini_jeu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center|bottom"
                android:text="Enigmes"
                android:textSize="17sp"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:src="@drawable/vie"
                    android:layout_margin="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/fois"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" Ã— "
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/vie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="17sp"
                    android:textAlignment="viewStart" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutScores"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:text="J1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewScoreJoueur1"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:visibility="gone" />


        <TextView
            android:text="J2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewScoreJoueur2"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"/>

        <TextView
            android:text="J3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewScoreJoueur3"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutActionBack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84">

    <FrameLayout
        android:id="@+id/layoutAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/enigme"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:gravity="center"
                android:text="Question"
                android:textSize="38sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/gauche"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="A"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/droite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="B"
                    android:textSize="45sp" />
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>
        </LinearLayout>

    <ProgressBar
        android:id="@+id/chronometre"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d0cfce"
        android:color="#d6eee3"
        android:progress="100"
        android:progressDrawable="@drawable/progress" />

</LinearLayout>